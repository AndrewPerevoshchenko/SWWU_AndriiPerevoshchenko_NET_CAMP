<UserControl x:Class="Task_1.Tower"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task_1"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="20" Background="LightGray" BorderThickness="1">
    <UserControl.BorderBrush>
        <SolidColorBrush Color="Black"/>
    </UserControl.BorderBrush>

    <Border x:Name="ProcessValue" VerticalAlignment="Bottom" Width="200" Height="0">
        <Border.Background>
            <LinearGradientBrush x:Name="LinearProcessBrush" StartPoint="0,0" EndPoint="0.5,0" SpreadMethod="Reflect">
                <GradientStop Color="#FF46C0FF" Offset="0"/>
                <GradientStop Color="White" Offset="3.5"/>
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</UserControl>
